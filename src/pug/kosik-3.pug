doctype html
include template/_variables.pug  
html(lang=lang)
    - var slug = "kosik-3";
    include template/_head.pug  
    body.cart
        include components/_modal-login.pug
        include components/_modal-personal.pug

        include components/_header.pug

        main
            section.cart-heading
                .container
                    .cart-heading__item.--complete
                        .cart-heading__icon 1
                        .cart-heading__title Nákupní košík
                    .cart-heading__item.--complete
                        .cart-heading__icon 2
                        .cart-heading__title Doprava a platba
                    .cart-heading__item.--active
                        .cart-heading__icon 3
                        .cart-heading__title Osobní údaje
                    .cart-heading__item
                        .cart-heading__icon 4
                        .cart-heading__title Shrnutí objednávky


            section.cart-content
                
                .container
                    .cart-container
                
                        .cart-table

                            form.cart-content__form(method="post" id="cart-form-user")

                                .cart-table__title Fakturační údaje
                                .cart-table-personal
                                    a.cart-table-personalAcc(href="/uzivatelsky-ucet")
                                        img(src="/img/icons/user.svg")
                                        p Své fakturační údaje můžete zobrazit v uživatelském účtu
                                        span.btn.btn-secondary Zobrazit údaje



                                .cart-table__title Doručovací údaje
                                .cart-table-personal

                                    form(action="" method="post")
                                        .form-group.--inline  
                                            select(name="user-info" id="user-info")   
                                                option(value="cz") Adresa Česká republika
                                                option(value="sk") Adresa Slovensko
                                            button.btn.btn-secondary Vypsat adresu

                                        .cart-table-address
                                            table 
                                                tr 
                                                    td Jméno
                                                    td test
