doctype html
include template/_variables.pug  
html(lang=lang)
    - var slug = "kosik-2";
    include template/_head.pug  
    body.cart
        include components/_modal-login.pug

        include components/_modal-delivery.pug
        include components/_modal-delivery2.pug
        include components/_modal-ppl.pug

        include components/_header.pug

        main
            section.cart-heading
                .container
                    .cart-heading__item.--complete
                        .cart-heading__icon 1
                        .cart-heading__title Nákupní košík
                    .cart-heading__item.--active
                        .cart-heading__icon 2
                        .cart-heading__title Doprava a platba
                    .cart-heading__item
                        .cart-heading__icon 3
                        .cart-heading__title Osobní údaje
                    .cart-heading__item
                        .cart-heading__icon 4
                        .cart-heading__title Shrnutí objednávky


            section.cart-content
                
                .container
                    .cart-container
                
                        .cart-table

                            form.cart-content__form(method="post" id="cart-form")

                                .cart-table__title Způsob dopravy
                                .cart-table-shipping

                                    label.cart-table-shipping-item(for="delivery-1" onclick="MicroModal.show('modal-delivery');")
                                        input(type="radio" id="delivery-1" name="delivery-1" required checked)  
                                        .cart-table-shipping-img
                                            img(src="/img/ceska-posta.png" alt="Česká pošta - Balík do ruky")
                                        .cart-table-shipping-text Česká pošta - Balík do ruky #[small Doba dodání 2-4 dny] #[span Vybraná pobočka: Praha 1]
                                        .cart-table-shipping-price #[span 50.4] Kč

                                    label.cart-table-shipping-item(for="delivery-2" onclick="MicroModal.show('modal-delivery2');")
                                        input(type="radio" id="delivery-2" name="delivery-1" required)  
                                        .cart-table-shipping-img
                                            img(src="/img/ceska-posta.png" alt="Česká pošta - Balík do ruky")
                                        .cart-table-shipping-text Zásilkovna
                                        .cart-table-shipping-price #[span 99] Kč

                                    label.cart-table-shipping-item(for="delivery-3")
                                        input(type="radio" id="delivery-3" name="delivery-1" required disabled)  
                                        .cart-table-shipping-img
                                            img(src="/img/ceska-posta.png" alt="Česká pošta - Balík do ruky")
                                        .cart-table-shipping-text Česká pošta - Balík do ruky
                                        .cart-table-shipping-price.--free #[span 0] Kč

                                    label.cart-table-shipping-item(for="delivery-4")
                                        input(type="radio" id="delivery-4" name="delivery-1" required)  
                                        .cart-table-shipping-img
                                            img(src="/img/ceska-posta.png" alt="Česká pošta - Balík do ruky")
                                        .cart-table-shipping-text Česká pošta - Balík do ruky 
                                        .cart-table-shipping-price #[span 99] Kč

                                    label.cart-table-shipping-item(for="delivery-5" onclick="MicroModal.show('modal-ppl');")
                                        input(type="radio" id="delivery-5" name="delivery-1" required)  
                                        .cart-table-shipping-img
                                            img(src="/img/ppl.png" alt="PPL")
                                        .cart-table-shipping-text PPL 
                                        .cart-table-shipping-price #[span 99] Kč  

                                    


                                .cart-table__title Způsob platby
                                .cart-table-shipping

                                    label.cart-table-shipping-item(for="payment-1")
                                        input(type="radio" id="payment-1" name="payment-1" required checked)  
                                        .cart-table-shipping-text Dobírka
                                        .cart-table-shipping-price #[span 20 ] Kč

                                    label.cart-table-shipping-item(for="payment-2")
                                        input(type="radio" id="payment-2" name="payment-1" required)  
                                        .cart-table-shipping-text Kartou
                                        .cart-table-shipping-price #[span 0 ] Kč






                    
                        aside.cart-aside
                            .cart-aside__title Rekapitulace objednávky
                            .cart-aside__table 


                                .cart-aside__weight Celková hmotnost: 25 kg

                                .cart-aside__delivery
                                
                                    .cart-aside__row 
                                        .cart-aside__table-th Cena zboží
                                        .cart-aside__table-td #[span(id="goodsprice") 32.3] Kč

                                    .cart-aside__row 
                                        .cart-aside__table-th Doprava a platba
                                        .cart-aside__table-td #[span(id="delprice") 70.4] Kč

                                .cart-aside__row.--main

                                    .cart-aside__table-row 
                                        .cart-aside__table-th Celkem bez DPH
                                        .cart-aside__table-td 
                                            div #[span(id="sumprice") 102.7] Kč 

                                    .cart-aside__table-row 
                                        .cart-aside__table-th Cena včetně DPH
                                        .cart-aside__table-td 
                                            div #[span(id="vatsumprice") 124] Kč 


                            .cart-aside__free-shipping Nakupte ještě za 6 237 Kč a máte dopravu zdarma

                            .cart-aside__contact
                                h4 Potřebujete s něčím poradit?
                                p Rádi vám pomůžeme. Po-Pá 9:00-17:00.
                                a(href="tel:+420111222333") #[img(src="/img/icons/phone.svg")] +420 111 222 333
                                a(href="mailto:info@email.cz") #[img(src="/img/icons/envelope.svg")] info@email.cz

                            .cart-aside__footer
                                button.btn.--cart(name="nextstep" form="cart-form") Osobní údaje #[img(src="/img/icons/cheveron-white.svg" alt="Pokračovat")]
                            
                                a.cart-aside__footer-link(href="/") 
                                    .cart-table__footer-icon
                                        img(src="/img/icons/cheveron.svg" alt="Krok zpět")
                                    .cart-table__footer-text Krok zpět

        
        include components/_footer.pug

        include template/_scripts.pug  

        script(src="/js/cart.js")